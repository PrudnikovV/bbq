<h1><%= t '.title' %></h1>
<div class="image">
  <%= image_tag(@photo.photo.thumb.url) %>
</div>
<p><%= t '.author' %>: <strong><%= @photo.user.name %></strong></p>

<hr/>

<%= t '.event' %>
<h3><%= link_to @event.title, events_url(@event) %></h3>

<%= t '.datetime' %>
<h4><%= l @event.datetime %></h4>

<%= t '.owner' %>
<h4><%= @event.user.name %></h4>
